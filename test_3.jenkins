#!groovy
//Check tets_1 properties
properties([disableConcurrentBuilds()])

pipeline { 
    agent any 

    triggers { 
        pollSCM ('* * * * *') 
    }

    options{
        buildDiscarder(logRotator(numToKeepStr: '10',artifactNumToKeepStr: '1'))
        timestamps()
    }
    
    stages {
        stage('docker login'){
            steps { 
                echo "===================== docker login =========================="
                withCredentials([usernamePassword(credentialsId: 'dokerhub_ingvar1982', usernameVariable: 'USERNAME', password: 'PASSWORD')]){
                //withCredendials([usernamePassword(credetialsId: 'dockerhub_ingvar1982',usernameVariable: 'USERNAME',password: 'PASSWORD')]){
                    sh"""
                    docker login -u $USERNAME -p $PASSWORD
                    """
                }
            }
        }    

        stage('create docker image') { 
            steps { 
                echo "===================== start building image =========================="
                dir ('docker'){
                    //sh 'docker build -t alpine:latest .'
                    sh 'docker build -t alpine:latest .'
                }
            }
        }

        stage('docker push'){
            steps{
                echo "===================== start building image =========================="
                //чтобы пушить image doker в Docker hub
                sh """
                'docker push ingvar1982/test:alpine' 
                """
            }
        }        
    }
}